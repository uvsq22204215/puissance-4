from tkinter import *
from random import randint

# création d'une fenêtre
fen = Tk()
fen.title("Puissance 4")

# création du canevas
can = Canvas(fen, width=710, height=610, bg="blue")
can.pack()

# fonction qui permet d'alterner les couleurs à chaque clique grâce à "couleurs.reverse()"
couleurs = [('red', 1), ('yellow', 2)]

def player(event):
    aleatoire = randint(1, 2)
    if aleatoire == 1:
        player_color = 'red'
    else:
        player_color = 'yellow'
    couleurs.reverse()
